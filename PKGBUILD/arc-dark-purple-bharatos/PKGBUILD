
# Maintainer: BharatOS <osBharat@proton.me>
pkgname="arc-dark-purple-bharatos"
pkgver="1.0.0"
pkgrel=1
pkgdesc="Arc Dark theme the Purple version for BharatOS"
arch=("any")
url="https://github.com/jnsh/arc-theme"
license=("GPL3")
source=("Arc-Dark-Purple-BharatOS.tar.gz")
sha256sums=("SKIP")

package() {
	install -d "${pkgdir}/usr/share/themes/"  ## creates the target directory
	cp -a "${srcdir}/Arc-Dark-Purple-BharatOS/" "${pkgdir}/usr/share/themes/" ## copies directories recursively with permissions preserved
}
